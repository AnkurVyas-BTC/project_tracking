<h1>Listing projects</h1>
<%= will_paginate %>
<table text-align="center" border="1px" cellspacing="10px" cellpadding="10px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th>Billing type</th>
      <th>Start date</th>
      <th>Deadline date</th>
      <th>End date</th>
      <th>Github url</th>
      <th>Status</th>
      <th>Clients</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.code %></td>
        <td><%= project.description %></td>
        <td><%= project.billing_type %></td>
        <td><%= project.start_date %></td>
        <td><%= project.deadline_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.github_url %></td>
        <td><%= project.status %></td>

        <td><%= project.client %></td>
        <td><%= link_to 'Show', project ,class: "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_project_path(project) ,class: "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Destroy', project, method: :delete,class: "btn btn-primary btn-sm btn-danger",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
 
</table>
 <%= will_paginate %>

