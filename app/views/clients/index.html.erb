<h1>Listing clients</h1>

<table text-align="center" border="1px" cellspacing="10px" cellpadding="10px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.country %></td>
        <td><%= link_to 'Show', client ,class: "btn btn-primary btn-success"%></td>
        <td><%= link_to 'Edit', edit_client_path(client),class: "btn btn-primary btn-sm btn-warning" %></td>
        <td>
         <% if client.projects.any? %>
          <% else %> 
        <%= link_to 'Destroy', client, class: "btn btn-primary btn-sm btn-danger",method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
